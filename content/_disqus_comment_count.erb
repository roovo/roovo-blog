<script type="text/javascript">
  //<![CDATA[
    (function() {
      var links = $('a[href$=#disqus_thread]');
      if(links.length == 0) return;
      var query = '?';
      for(var i = 0; i < links.length; i++) {
          query += 'url' + i + '=' + encodeURIComponent(links[i].href) + '&';
      }
      document.write('<script charset="utf-8" type="text/javascript" src="http://disqus.com/forums/<%= SITE.disqus_forum_name -%>/get_num_replies.js' + query + '"></' + 'script>');
    })();
  //]]>
</script>
