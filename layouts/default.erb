---
extension: html
filter:    erb
---
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-us">
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>roovo:web &raquo; <%= @page.title.downcase %></title>
  <meta name="author" content="<%= @page.author %>" />

  <link rel="alternate"  type="application/rss+xml" title="roovo blog" href="atom.xml" />

  <link rel="stylesheet" type="text/css" href="/css/reset.css" media="screen" />
  <link rel="stylesheet" type="text/css" href="/css/text.css" media="screen" />
  <link rel="stylesheet" type="text/css" href="/css/960.css" media="screen" />
  <link rel="stylesheet" type="text/css" href="/css/layout.css" media="screen" />
  <!--[if IE 6]><link rel="stylesheet" type="text/css" href="css/ie6.css" media="screen" /><![endif]-->
  <!--[if gte IE 7]><link rel="stylesheet" type="text/css" href="css/ie.css" media="screen" /><![endif]-->

  <!-- CodeRay syntax highlighting CSS -->
  <link rel="stylesheet" href="/css/coderay.css" type="text/css" />

  <script type="text/javascript" src="/js/jquery-1.3.2.min.js"></script>
</head>
<body>
  <div class="container_16">
    <div class="grid_16">
      <h1 id="branding">
        <%= link_to_page('roovo:web', :title => 'Home') %>
        <% if @page.show_heading %>
          <span class="section-title">&raquo; <%= @page.title.downcase %></span>
        <% end %>
      </h1>
    </div>
    <div class="clear"></div>
    <div class="grid_11">
      <%= render :partial => '/content' %>
    </div>
    <div class="grid_5">
      <%= render :partial => '/side_bar' %>
    </div>
    <div class="clear"></div>
    <div class="grid_16 footer">
      <hr />
      <p>&copy; roovo 2009 : using <a href="http://webby.rubyforge.org">webby</a></p>
      <%= render :partial => '/disqus_comment_count' %>
    </div>
    <div class="clear"></div>
  </div>
  <%= render :partial => '/google_analytics' %>
</body>
</html>
